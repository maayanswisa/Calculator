<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:background="@drawable/wood5">

        <TextView
            android:id="@+id/screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="80dp"
            android:textColor="#FFFFFF"
            android:paddingTop="120dp"
            android:paddingLeft="20dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wood">

        <Button
            android:id="@+id/btnOn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"

            android:text="On"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnOff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="OFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:text="AC"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="/"
            android:textSize="40dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wood">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnMult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="*"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wood">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="4"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="6"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="-"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wood">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="1"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="2"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="3"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="+"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wood">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="Del"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="0"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign2"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="."
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnEquels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttendesign3"
            android:gravity="center"
            android:onClick="funcNumber"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

</LinearLayout>